  <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"> 
  <title>Canteen Token System</title>
  <link rel="stylesheet" href="templates/user.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<style>
  /* styles.css */
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
}

header {
    background-color: #333;
    color: #fff;
    padding: 20px;
    text-align: center;
}

header h1 {
    margin: 0;
    font-size: 2em;
    text-align: left;
}

nav ul {
    list-style: none;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-right: 20px;
    float : right;
    position: relative;
    bottom: 35px;
    
}

nav ul li a {
    text-decoration: none;
    color: #fff;
}

.container {
    max-width: 1200px;
    margin: 20px auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.card {
    width: 500px;
    background-color: #fff;
    border: 1px solid #ddd;
    margin: 5px;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex; /* Set display to flex */
    flex-direction: row; /* Stack children vertically */
    align-items: left; /* Center children horizontally */
    text-align: right; /* Center text */
    height: 200px;
}

.card img {
    max-width: 50%;
    height: auto;
    margin-bottom: 10px; /* Add margin to separate image and text */
}

.card input {
    font-size: 1.5em;
    margin-right: 55px;
    align-items: end;
}

.card p {
    color: #555;
}

.card .price {
    color: #e44d26;
    font-weight: bold;
    font-size: 1.2em;
    margin-bottom: 10px;
    
}
#price{
    position: relative;
    right: 42px;
}
#cart{
    position: relative;
    bottom: 42px;
}

#item-name{
    position: relative;
    right: 20px;
}

.add-to-cart {
    background-color: #e44d26;
    color: #fff;
    border: none;
    height: 40px;
    width: 150px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1em;
    position: relative;
    left: 34px;
}

.add-to-cart:hover {
    background-color:Â #333;
}
#data{
  width: 40px;
  height: 20px;
  position: relative;
  left: 80px;
 
}
#qty{
  width: 40px;
  height: 20px;
  position: relative;
  left: 70px;
}

 

</style>
</head>
<body>
  <!-- Shirts -->
  <header>
    <h1>Canteen Token System</h1>
    <nav>
      <ul>
        <li><a href="/cart"><i class="fa fa-shopping-cart" style="font-size:36px"></i></a></li>
        <li><a href="/">logout</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/odetails">OrderDetails</a></li>
      </ul>
    </nav>
  </header>
  <div class="container">
    <div class="alert alert-success">
      <%= message %>
    </div>
    <% if(sampleData.length>0) { %>
        <%sampleData.forEach(function(data){ %>
            <form action="/addItem" method="post">
                <div class="item">
                <div class="card">
                <img src="/images/img4.jpg" alt="Item 4" data-id="<%= data['id'] %>"><br>
                <table>
                <tr><td id="item-name"><input type="hidden" name="name" value="<%= data['item_name']%>" id="item-name"><b>Name:</b><%= data['item_name']%></td></tr>
                <tr><td id="price"><input type="hidden" name="price" value="<%= data['cost'] %>" id="price"><b>Price:</b><%= data['cost'] %></td></tr>
                <tr><td ><input type="hidden" name="data-id" value="<%= data['id'] %>" id="data" >
                <input type="hidden" name="quantity" value="1" id="qty"><br></td></tr>
                <tr><td><button type="submit" class="add-to-cart">Add to Cart</button><br></td></tr>
              </table>
            </div>
            </div>
            
              </form>
       <% }) %>
      <% } else { %>
        <h1>no data found</h1>
      <% } %>
</div>
 
</body>
</html>
