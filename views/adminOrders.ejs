<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Order Details</title>
  <link rel="stylesheet" href="/templates/orderdetails.css">
</head>
<body>
  <header>
    <h1>Today Orders</h1>
    <nav>
      <ul>
        <li><a href="/adminHome">Home</a></li>
      </ul>
    </nav>
  </header>
  <div class="container">
    <form action="/orders" action="post">
      <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">Order Details</div>
            </div>
        </div>
        <div class="card-body" >
            <table class="table table-responsive">
        <% if(sampleData.length>0) { %>
            <h1>Today Items:</h1>
            <tr>
              <td>
              <div class="card-body">
                  <table >         
            <%sampleData.forEach(function(data){ %>
             <tr><td> <li><b>Item Name:</b><%= data['name1'] %></li></td></tr>
             <tr><td> <li><b>Quantity:</b><%= data['cnt1'] %></li><br></td></tr>
           <% }) %>
          <% } else { %>
            <h1>no data found</h1>
          </td>
            </tr>
                  </table>
              </div>
          <% } %>
      </div>
        </form>
      </div> 
</body>
</html>